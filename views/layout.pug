doctype html
html
  head
    title EEG Recorder #{title}
    if csrfToken
      meta(name='token' content='#{csrfToken}')
    if user
      meta(name='username' content='#{user.username}')
      meta(name='userid' content='#{user.id}')
    link(rel='stylesheet', href='/css/app.css')
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    link(rel='preconnect' href='https://fonts.googleapis.com')
    link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin)
    link(href='https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap' rel='stylesheet')
    style.
      body {
        font-family: 'Quicksand', sans-serif;
      }
    block javascript

  body
    .position-fixed.top-0.start-0.m-3.text-center
      img(src='/images/brain.png' alt='Brain Logo' width='50' height='50')
      .mt-1.small EEG Recorder
    
    if user
      .position-fixed.top-0.end-0.m-3
        span Welcome #{user.username}
        a(href="./logout" class="btn btn-sm btn-outline-secondary ms-2") Logout
    
    .content-wrapper.pt-5.mt-4
      block content
    block foot
      #footer
        p EEG Recorder version 0.2
